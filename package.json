{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    
    "EXPO:SECTION": "-------------------  EXPO SECTION -------------------",
    "expo:android": "npm run sys:nvm && expo start --android",
    "expo:ios": "npm run sys:nvm && expo start --ios",
    "expo:web": "npm run sys:nvm && expo start --web",
    "expo:web:ci": "npm run sys:nvm && expo start --web",
    "expo:hybrid": "export development=true && npm run sys:nvm &&  expo start --android --web",
    "expo:install": "npm run sys:nvm && expo install",
    "expo:refresh": "adb shell am force-stop host.exp.exponent",

    
    "firebase:stage": "firebase use development && firebase deploy",
    "firebase:production": "firebase use production && firebase deploy",
    "firebase:functions": "export development=true && firebase functions:shell",

    "COMPILE:SECTION": "-------------------  COMPILE SECTION -------------------",
    "compile:web": "export $(grep '^[a-zA-Z_]*=.*' .env.production | xargs) && expo build:web",
    "compile:android": "export $(grep '^[a-zA-Z_]*=.*' .env.production | xargs) && expo build:android",
    "compile:ios": "export $(grep '^[a-zA-Z_]*=.*' .env.production | xargs) && export SENTRY_LOG_LEVEL='debug' && expo build:ios && expo upload:ios",

    "DEPLOY:SECTION": "-------------------  DEPLOY SECTION -------------------",
    "upload:ios": "expo upload:ios",
    "deploy:development": "export $(grep '^[a-zA-Z_]*=.*' .env | xargs) && expo publish -c --release-channel development && npm run compile:web",
    "deploy:production": "export $(grep '^[a-zA-Z_]*=.*' .env | xargs) && expo publish && npm run compile:web",

    "SYS:SECTION": "-------------------  SYS SECTION -------------------",
    "sys:bust": "npm cache clean --force && rm -fr $TMPDIR/metro* && watchman watch-del-all && jest --clearCache",
    "sys:baseline": "npm run sys:nvm && npm run bust && rm package-lock.json && rm -rf node_modules && npm i",
    "sys:nvm": "unset PREFIX && source ~/.nvm/nvm.sh && nvm use || echo 'No NVM available'",

    "TEST:SECTION": "-------------------  TEST SECTION -------------------",
    "test:all": "npm run test:e2e && jest --colors --silent snap && jest --colors --silent unit",
    "test:e2e:dev": "cypress open",
    "test:e2e": "start-server-and-test 'npm run expo:web:ci' http://localhost:19006 'cypress run --quiet' ",
    "test:update": "jest --colors --updateSnapshot snap"

  },
  "dependencies": {
    "@babel/core": "^7.12.9",
    "@neverdull-agency/expo-unlimited-secure-store": "^1.0.10",
    "@sentry/browser": "^5.26.0",
    "babel-preset-expo": "^8.3.0",
    "base-64": "^0.1.0",
    "color": "^3.1.3",
    "expo": "^39.0.3",
    "expo-cli": "^3.28.0",
    "expo-constants": "~9.2.0",
    "expo-contacts": "~8.6.0",
    "expo-file-system": "~9.2.0",
    "expo-firebase-analytics": "~2.5.1",
    "expo-firebase-core": "~1.2.0",
    "expo-image-manipulator": "~8.3.0",
    "expo-image-picker": "~9.1.1",
    "expo-linking": "^1.0.4",
    "expo-network": "~2.3.0",
    "expo-permissions": "~9.3.0",
    "expo-random": "~9.0.0",
    "expo-screen-orientation": "~2.0.0",
    "expo-secure-store": "~9.2.0",
    "expo-updates": "~0.3.5",
    "firebase": "7.24.0",
    "history": "^4.10.1",
    "react": "16.13.1",
    "react-dom": "16.13.1",
    "react-native": "https://github.com/expo/react-native/archive/sdk-39.0.3.tar.gz",
    "react-native-gesture-handler": "~1.7.0",
    "react-native-paper": "^4.2.0",
    "react-native-svg": "12.1.0",
    "react-native-svg-transformer": "^0.14.3",
    "react-native-vector-icons": "^7.1.0",
    "react-native-web": "~0.13.7",
    "react-redux": "^7.2.1",
    "react-router-dom": "^5.2.0",
    "react-router-native": "^5.2.0",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-promise-middleware": "^6.1.2",
    "sentry-expo": "^3.0.2",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "cypress": "^5.5.0",
    "dotenv": "^8.2.0",
    "firebase-tools": "^8.12.1",
    "jest": "^26.5.3",
    "jest-expo": "^39.0.0",
    "jest-svg-transformer": "^1.0.0",
    "react-native-dotenv": "^0.2.0",
    "react-test-renderer": "^16.14.0",
    "redux-logger": "^3.0.6",
    "redux-mock-store": "^1.5.4",
    "sha3": "^2.1.3",
    "start-server-and-test": "^1.11.6"
  },
  "private": true
}

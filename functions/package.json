{
  "name": "functions",
  "description": "Cloud Functions for Firebase",
  "scripts": {
    "serve": "export development=true && firebase emulators:start --only functions",
    "shell": "source ~/.nvm/nvm.sh && nvm use && export development=true && export GOOGLE_APPLICATION_CREDENTIALS=\"$(pwd)/../nutshell-staging.json\" && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "10"
  },
  "dependencies": {
    "array-flatten": "^3.0.0",
    "expo-server-sdk": "^3.5.1",
    "firebase-admin": "^8.12.1",
    "firebase-functions": "^3.7.0",
    "promise-parallel-throttle": "^3.3.0"
  },
  "devDependencies": {
    "firebase-functions-test": "^0.2.1"
  },
  "private": true
}
